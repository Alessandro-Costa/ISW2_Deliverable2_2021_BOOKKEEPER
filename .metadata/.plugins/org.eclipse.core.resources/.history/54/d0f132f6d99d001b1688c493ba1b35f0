		RepositoryBuilder build = new RepositoryBuilder();
		Repository rep = build.setGitDir(dir).readEnvironment().findGitDir().build();
		Git git = new Git(rep);
		Iterable<RevCommit> log = git.log().call();
		for(RevCommit r : log) {
			ticketCommits.add(r);	
